import "./Hexagon.blink"

struct BombsData {
    Bombs: i32,
    GoldBombs: i32,
    Nukes: i32,
}

enum BombType = {
    Bomb,
    GoldBomb,
    Nuke,
}

function Use {
    Yield: Coroutine,
    Data: (BombType, f64),
}

event BombDeployed {
    From: Server,
    Type: Reliable,
    Call: SingleAsync,
    Data: (BombType, Hexagon.Axial, i32),
}

event BombExploded {
    From: Server,
    Type: Reliable,
    Call: SingleAsync,
    Data: i32,
}